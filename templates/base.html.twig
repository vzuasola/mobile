<!DOCTYPE html>
<html>
<head>
    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('images/favicon.ico') }}"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=0">
    <meta name="theme-color" content="#af0000">
    <script async src="https://cdn.jsdelivr.net/npm/pwacompat@2.0.6/pwacompat.min.js"
    integrity="sha384-GOaSLecPIMCJksN83HLuYf9FToOiQ2Df0+0ntv7ey8zjUHESXhthwvq9hXAZTifA"
    crossorigin="anonymous"></script>

    <title>{{ title }}</title>
    {% block seo %}{% endblock %}
    {% block marketing %}{% endblock %}
    {% block css %}{% endblock %}
</head>
<body
    class="{{ app.lang }}"

    data-language="{{ app.lang }}"
    data-route={{ app.router_request.uri.path }}
    data-product={{ app.product_resolver.getProduct }}

    style="background: #000; visibility: hidden;"
>
    {% block header %}{% endblock header %}

    <main class="main">
        {% block body %}{% endblock body %}
    </main>

    {% block footer %}{% endblock footer %}

    {% block pwa_home_screen %}{% endblock pwa_home_screen %}

    {% block script %}
        {{ module_scripts() }}
    {% endblock %}
</body>
</html>
