<!DOCTYPE html>
<html>
<head>
    <link rel="manifest" href="{{ url('manifest.json') }}">
    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('images/favicon.ico') }}"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=0">
    <meta name="theme-color" content="#af0000">

    <title>{{ title }}</title>
    {% block loader %}{% endblock %}
    {% block seo %}{% endblock %}
    {% block marketing_header %}{% endblock %}
    {% block script_header %}{% endblock %}
    {% block css %}{% endblock %}
</head>
<body
    class="{{ app.lang }} {{ product }}"

    data-language="{{ app.lang }}"
    data-route={{ app.router_request.uri.path }}
    data-product={{ product }}
    style="background: #000; visibility: hidden;"
>
    <header>
        {% block header %}{% endblock header %}
    </header>
    <main class="main">
        {% block body %}{% endblock body %}
    </main>

    {% block footer %}{% endblock footer %}

    {% block script %}
        {{ module_scripts() }}
    {% endblock %}
    {% block marketing_footer %}{% endblock %}
    {% block late_script %}{% endblock %}
</body>
</html>
