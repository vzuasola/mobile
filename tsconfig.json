{
    "compilerOptions": {
        "target": "ES5",
        "lib": ["dom", "es5", "scripthost", "es2015"],
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@app/*": ["./*"],
            "@core/*": ["./core/core/*"],
            "@plugins/*": ["./core/core/src/Plugins/*"],
        },
    },
    "include": [
        "assets/**/*.js",
        "assets/**/*.ts",
        "assets/**/*.handlebars",
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.handlebars",
    ],
    "exclude": [
        "node_modules"
    ]
}
