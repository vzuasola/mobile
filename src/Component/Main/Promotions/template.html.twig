
<div class="page-title promotions">
    <h1 class="page-title-text promotions-title">Promotions</h1>
    <a href="#" class="page-title-back-button">
        {% include '@app/web/images/svg/arrow.svg' %}
    </a>
    <div class="dropdown-menu">
        {% set promotionId = "" %}
        {% set promotionPrefix = "" %}

        {% for promotions_filter in promotions_filters %}
            {% if promotions_filter['name'][0]['value'] == promotions_filters[0]['name'][0]['value'] %}
                {% set promotionId =  promotions_filter['field_product_category_id'][0]['value'] %}
                {% set promotionPrefix = promotions_filter['name'][0]['value'] %}
            {% endif %}
        {% endfor %}

        <a href="#" class="{{ promotionId }} dropdown-trigger promotion-link" data-current-promotion="{{ promotionPrefix }}">
            {{ promotionPrefix }}
            {% include '@app/web/images/svg/arrow.svg' %}
        </a>

        <ul>
            <li class="title">Filter</li>
            {% for promotions_filter in promotions_filters %}
                {% set isActive = promotions_filter['name'][0]['value'] == promotions_filters[0]['name'][0]['value'] ? "active" : "" %}

            <li class="{{ promotions_filter['field_product_category_id'][0]['value'] }} {{isActive}}" data-promotion="{{ promotions_filter['name'][0]['value'] }}">
                <a href="#{{ promotions_filter['product_id'][0]['value'] }}" class="language-link">{{ promotions_filter['name'][0]['value'] }}</a>
            </li>

            {% endfor %}
        </ul>

    </div>
</div>

