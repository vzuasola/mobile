
<div class="page-title promotions">
    <h1 class="page-title-text promotions-title">Promotions</h1>
    <a href="#" class="page-title-back-button">
        {% include '@app/web/images/svg/arrow.svg' %}
    </a>
    <div class="dropdown-menu">
        <a
            href="#" class="dropdown-trigger promotion-link active-filter"
            data-current-filter=""
        >
            <span class="current-filter"></span>
            {% include '@app/web/images/svg/arrow.svg' %}
        </a>

        <ul>
            <li class="title">Filter</li>
            {% for promotions_filter in promotions_filters %}
            <li>
                <a
                 href="#"
                 class="product-link filter-{{ promotions_filter['field_product_filter_id'][0]['value'] }}"
                 data-product-filter-id="{{ promotions_filter['field_product_filter_id'][0]['value'] }}"
                 data-product-filter-name="{{ promotions_filter['name'][0]['value'] }}"
                >{{ promotions_filter['name'][0]['value'] }}</a>
            </li>
            {% endfor %}
        </ul>

    </div>
</div>

<div class="promotions-body">
    
</div>
