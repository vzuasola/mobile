<section class="banner slider pagination-right" id="main-banner">
    <div class="banner-slides">
    {% for slide in slides %} 
        {% set show_both = (slide['field_log_in_state']|length > 1) %}
        {% set product_tag = slide['field_product']['0']['name'][0]['value'] %}

        {% if show_both or (slide['field_log_in_state'][0]['value'] == '0' and not is_login) %}
        <div class="banner-slides-item">
            <a href="{{slide['field_banner_link'][0]['value'] }}" 
            target="{{slide['field_banner_link_target'][0]['value']}}">
                <picture>
                    <source media="(max-width: 767px)" 
                    srcset="{{ asset(slide['field_banner_image'][0]['url']) }}">
                    <img src="{{ asset(slide['field_banner_image'][0]['url']) }}" 
                    alt="{{ asset(slide['field_banner_image'][0]['alt']) }}" class="w-100">
                </picture>
            </a>
            <div class="banner-blurb {{slide['field_content_position'][0]['value'] }}">
                {% if product_tag %}
                <span class="product-tag tag-{{ product_tag|replace({' ':'-'})|lower }}">
                    {{ product_tag }}
                </span>
                {% endif %}
                {{ slide['field_banner_blurb'][0]['value']|raw }}
            </div>
        </div>
        {% elseif show_both or (slide['field_log_in_state'][0]['value'] == '1' and is_login) %}
        <div class="banner-slides-item">
            <a href="{{slide['field_post_banner_link'][0]['value'] }}" 
            target="{{slide['field_post_banner_link_target'][0]['value']}}">
                <picture>
                    <source media="(max-width: 767px)" 
                    srcset="{{ asset(slide['field_post_banner_image'][0]['url']) }}">
                    <img src="{{ asset(slide['field_post_banner_image'][0]['url']) }}" 
                    alt="{{ asset(slide['field_post_banner_image'][0]['alt']) }}" class="w-100">
                </picture>
            </a>
            <div class="banner-blurb {{slide['field_post_content_position'][0]['value'] }}">
                {% if product_tag %}
                <span class="product-tag tag-{{ product_tag|replace({' ':'-'})|lower }}">
                    {{ product_tag }}
                </span>
                {% endif %}
                {{ slide['field_post_banner_blurb'][0]['value']|raw }}
            </div>
        </div>
        {% endif %}
    {% endfor %}
    </div>
</section>
