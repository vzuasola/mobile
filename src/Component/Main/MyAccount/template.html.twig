<div id="my-account">
    <div class="tab">
        <ul class="tab-menu">
            <li class="active"><a href="#my-profile-content">{{ myProfileTab }}</a></li>
            <li><a href="#change-password-content">{{ changePasswordTab }}</a></li>
            {% if enableBonusCode %}
                <li><a href="#bonuses-content">{{ bonusTabLabel }}</a></li>
            {% endif %}
            {% if documentsEnabled %}
                <li><a href="#documents-content">{{ documentsTabLabel }}</a></li>
            {% endif %}
        </ul>
        <div class="container">
            <div class="tab-content" id="my-profile-content">
                {% if (isFastReg) %}
                    <div class="alert ml-15 mr-15 mb-0 mt-10" id="fast-reg-notification"> {{ flashMessage|raw}} </div>
                {% endif %}
                {{ widget('profile') }}
            </div>
            <div class="tab-content" id="change-password-content">
                {{ widget('change_password') }}
            </div>
            {% if enableBonusCode %}
                <div class="tab-content" id="bonuses-content">
                    {{ widget('bonuses') }}
                </div>
            {% endif %}
            {% if documentsEnabled %}
                <div class="tab-content" id="documents-content">
                    {{ widget('documents') }}
                </div>
            {% endif %}
        </div>
    </div>
</div>
<span class="hidden">
    {% include '@app/web/images/svg/rounded.svg' ignore missing %}
</span>
