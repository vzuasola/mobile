<div class="providers-tab-list" id="providers-tab">
    {{#condition categories.length ">" 9}}
    <ul class="main-game-providers game-providers provider-10">
    {{/condition}}
    {{#condition categories.length "<=" 9}}
    <ul class="main-game-providers game-providers provider-{{categories.length}}">
    {{/condition}}      
        {{#each categories}}
                {{#condition @index "<=" 6}}
                <li class="game-providers-item game-providers-tab">
                    <a
                        href="#{{this.field_games_alias}}"
                        class="category-tab category-{{this.field_games_alias}} {{#condition ../active "===" this.field_games_alias}}active{{/condition}}"
                        data-category-filter-id="{{this.field_games_alias}}"
                        data-category-filter-name="{{{this.name}}}"
                    >
                    {{#if this.field_games_logo }}
                        <img src="{{this.field_games_logo}}" alt="{{{this.name}}}">
                    {{/if}}
                    </a>
                </li>
                {{/condition}}
        {{/each}}
        <li class="game-providers-item game-providers-more">
            <span class="provider-drawer providers-more"></span>
            <p class="providers-more-text m-0">
                {{{configs.more_provider_drawer}}}
                <svg viewBox="0 30 24 44.999">
                    <use xlink:href="#arrow" />
                </svg>
            </p>
            <div class="provider-menu">
                <h2 class="provider-menu-title m-0">
                    {{{configs.title_provider_drawer}}}
                    <span class="provider-content-button close-svg">
                        <svg viewBox="0 0 70.24 70.24" class="provider-content-button-svg close-svg close-drawer">
                            <path class="close-svg close-drawer" d="M39.53 35.12L53 21.17a3.18 3.18 0 0 0-.09-4.49 3.18 3.18 0 0 0-4.49.09l-13.3 13.78-13.26-13.78a3.18 3.18 0 0 0-4.49-.09 3.18 3.18 0 0 0-.08 4.49l13.43 13.95-13.43 14a3.17 3.17 0 1 0 4.57 4.4L35.12 39.7l13.26 13.77a3.18 3.18 0 0 0 4.49.09 3.18 3.18 0 0 0 .13-4.49z" />
                        </svg>
                    </span>
                </h2>
                <ul class="game-providers arcade-drawer col-12 mb-10">
                    {{#each categories}}
                    <li class="game-providers-list arcade-drawer pt-10 game-providers-tab close-drawer">
                       <a href="#{{this.field_games_alias}}" class="category-provider-menu category-{{this.field_games_alias}} {{#condition ../active "===" this.field_games_alias}}active{{/condition}} close-drawer"
                            data-category-filter-id="{{this.field_games_alias}}" data-category-filter-name="{{{this.name}}}">
                            {{#if this.field_games_logo }}
                                <img src="{{this.field_games_logo}}" alt="{{{this.name}}}" class="close-drawer">
                            {{/if}}
                            <p class="close-drawer">{{{this.name}}}</p>
                        </a>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </li>
    </ul>
</div>
