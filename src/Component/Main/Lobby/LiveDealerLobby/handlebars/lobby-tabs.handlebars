<ul class="pft-list-menu">
    {{#each tabs}}
    <li class="{{ ../this.liClass }} pft-list-menu-item">
        <a href="#{{ this.field_alias.0.value }}" class="pft-item-links tab-{{ this.field_alias.0.value }}">
            {{ this.field_label.0.value }}
        </a>
    </li>
    {{/each}}
    {{#if ../this.authenticated}}
        {{#if ../this.transfer_url}}
            <li class="{{ ../this.liClass }} pft-list-menu-item pft-list-menu-transfer">
                <a href="{{ ../this.transfer_url }}" class="pft-item-links games-transfer">
                    {{ ../this.transfer_title }}
                </a>
            </li>
        {{/if}}
    {{/if}}
</ul>
