<section class="xlider" id="main-slider">
    {% for slide in slides %} 
        <div class="xlide-item">
            <a 
                href="{{ url(slide.banner_url) }}" 
                target="{{ slide.banner_target }}"
                {% if slide.game_code %}
                    class = "game-list"
                {% endif %}
                data-game-provider="{{ slide.game_provider }}"
                data-game-code="{{ slide.game_code }}"
                data-game-target="{{ slide.banner_target }}"
                data-game-title="{{ slide.field_title }}"
                {% if is_login %}
                    data-game-launch="true"
                {% endif %}
            >
                <img 
                    src="{{ asset(slide.banner_img, product) }}" 
                    alt="{{ slide.banner_alt }}" 
                    class="w-100"
                >
                <div class="xlider-blurb {{ slide.banner_pos }} {{enable_transition_slider }}">
                    {{ include('@component/Main/Lobby/Slider/templates/product-ribbon.html.twig') }}
                    {{ slide.banner_blurb|raw }}
                </div>
            </a>
        </div>
    {% endfor %}
</section>
