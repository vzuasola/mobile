{% if downloads_menu %}
<div class="download">

    <ul class="app-download clearfix">
        {% for menu in downloads_menu[:3] %}
        {% set menuLength = (downloads_menu|length == 2) ? 'app-download-two' :
        'app-download-three' %}
        <li class="app-download-list {{ menuLength }}">
            <a href="{{ url(menu.uri) }}" class="{{ menu.attributes.class }} {{ menu.attributes.svg }} download-box" target="{{ menu.attributes.target }}"
                data-router="true" data-router-refresh="main">
                <svg viewBox="0 0 20 20">
                    <use xlink:href="#{{ menu.attributes.svg }}" />
                </svg>

                <span class="app-download-list-text">
                    {{ menu.title }}
                </span>
            </a>
        </li>
        {% endfor %}
    </ul>

    {% if downloads_menu|length > 3 %}
    <dl class="ckeditor-accordion">
        {% set menuLength = (lists|length == 2 or lists|length == 4) ? 'app-download-two' :
        'app-download-three' %}
        <dt data-transition-top="true">{{ all_apps_text }}</dt>
        <dd>
            <ul class="app-download clearfix">
                {% for menu in downloads_menu[3:] %}
                <li class="app-download-list {{ menuLength }}">
                    <a href="{{ url(menu.uri) }}" class="{{ menu.attributes.class }} {{ menu.attributes.svg }} download-box"
                        target="{{ menu.attributes.target }}" data-router="true" data-router-refresh="main">
                        <svg viewBox="0 0 20 20">
                            <use xlink:href="#{{ menu.attributes.svg }}" />
                        </svg>
                        <span class="app-download-list-text">
                            {{ menu.title }}
                        </span>
                    </a>
                </li>
                {% endfor %}
                </ul>
        </dd>
    </dl>
    {% endif %}
</div>

{% endif %}
<span class="hidden">
    {% include '@app/web/images/svg/downloads/download-icons.svg' ignore missing %}
</span>
