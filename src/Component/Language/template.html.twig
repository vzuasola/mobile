<div id="language-lightbox" class="modal language language-lightbox">
    <div class="modal-content language-content">
        <div class="modal-body">
            <h3>{{ mobile_language_select }}</h3>
            <ul class="menu">
                {% for key,lang in language %}
                    {% set isActive = lang.prefix == currentLanguage ? "active" : "" %}
                    <li class="{% if lang.hide %}hidden{% endif %}  {{ lang.id }} {{ isActive }}">
                        <a href="#" class="language-link" data-lang="{{ lang.prefix }}">
                        {{ lang.name }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
        {% include '@app/web/images/svg/closed.svg' %}
    </div>
</div>
