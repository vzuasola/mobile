{{#if announcementData.announcements.[0].show }}
    <div class="mount-announcement">
        <ul class="announcement clearfix">
            <li class="announcement-list" data="{{ announcementData.announcements.[0].nid }}">
                <svg data-name="news" viewBox="0 0 122.2 123.27">
                    <path  id="news" d="M61.1 0C27.41 0 0 27.65 0 61.63s27.41 61.64 61.1 61.64 61.1-27.65 61.1-61.64S94.79 0 61.1 0zm-.21 115.85c-29.68 0-53.74-24.28-53.74-54.22s24.06-54.2 53.74-54.2 53.73 24.26 53.73 54.2-24.05 54.22-53.73 54.22zM38.87 82a2.91 2.91 0 0 1-2.23 3.4 2.87 2.87 0 0 1-3.75-1.51l-6.1-19.66A2.92 2.92 0 0 1 29 60.81a2.88 2.88 0 0 1 3.75 1.52zm63.3-9c.86 2.77-.29 5.59-2.57 6.31-2.28.72-4.82-.94-5.68-3.71L81.48 35.53c-.85-2.77.3-5.6 2.58-6.32 2.27-.72 4.82.94 5.68 3.71zm-11.06 7.32A5.7 5.7 0 0 1 88.6 77L76.15 36.92a5.68 5.68 0 0 1 .4-4.49l-.08-.26-39.7 26L44 82.4l6.23-.28V88a3 3 0 0 0 3 3h18.11a3 3 0 0 0 3-3v-6.1a3 3 0 0 0-.17-.85zm-19.77 5.35A2.33 2.33 0 0 1 69 88H55.54a2.34 2.34 0 0 1-2.33-2.35v-3.44l18.13-.54z"/>
                </svg>
                {{{ announcementData.announcements.[0].text }}}
            </li>
        </ul>
        <div class="announcement-list-content-bottom">
            <a href="#" class="btn-dismiss">
                <strong>{{ announcementData.dismiss_all }}</strong>
            </a>
            <a href="#announcement-lightbox" class="announcement-trigger btn-see-announcement">
                <strong>{{ announcementData.see_all }}</strong>
            </a>
        </div>
    </div>
{{/if}}
<div id="announcement-lightbox" class="modal announcement">
    <div class="modal-content announcement-content">
        <h2 class="announcement-title">{{announcementData.title}}</h2>
        <svg viewBox="0 0 70.24 70.24" class="modal-close modal-close-button">
            <rect class="modal-close"/>
            <path class="modal-close" d="M39.53 35.12L53 21.17a3.18 3.18 0 0 0-.09-4.49 3.18 3.18 0 0 0-4.49.09l-13.3 13.78-13.26-13.78a3.18 3.18 0 0 0-4.49-.09 3.18 3.18 0 0 0-.08 4.49l13.43 13.95-13.43 14a3.17 3.17 0 1 0 4.57 4.4L35.12 39.7l13.26 13.77a3.18 3.18 0 0 0 4.49.09 3.18 3.18 0 0 0 .13-4.49z"/>
        </svg>

        <div class="modal-body announcement-body">
            {{#if announcementData.announcement_count}}
            <ul>
                {{#each announcementData.announcements}}
                    {{#if show }}
                    <li class="announcement-item"  data="{{ nid }}">
                        <strong class="text-red announcement-item-title">{{ title }}</strong>
                        {{{ text }}}
                    </li>
                    {{/if}}
                {{/each}}
            </ul>
            {{else}}
                <ul>
                    <li class="text-red">{{ announcementData.default_message }}</li>
                </ul>
            {{/if}}
        </div>
    </div>
</div>
