{% if sponsors %}
    <div class="sponsors clearfix">
        {% if entrypage_config.parnerts_and_sponsor_title_text %}
            <p class="sponsors-title">{{ entrypage_config.parnerts_and_sponsor_title_text }}</p>
        {% endif %}
        <ul class="sponsors-lists {% if enable_new_style %}footer-revamp mt-20{% endif %}">
            {% for sponsor in sponsors %}
                {% if sponsor.field_sponsor_enable[0].value and sponsor.field_sponsor_image[0].url != ''%}
                    <li class="{{ sponsor.field_sponsor_svg_class[0].value }}">
                        {% if sponsor.field_sponsor_svg_class[0].value %}
                            {% if sponsor.field_sponsor_link[0].uri %}
                                <a href="{{ url(sponsor.field_sponsor_link[0].uri) }}" target="{{ sponsor.field_link_target[0].value }}">
                            {% endif %}
                                <svg viewBox="0 0 50 50">
                                    <image xlink:href="{{sponsor.field_sponsor_image[0].url}}" width="5rem" height="5rem" />
                                </svg>
                            <p {% if not enable_new_style %}class="hidden"{% endif %}
                                {% if enable_new_style and sponsor_title_font_size %}
                                    style="font-size: {{ sponsor_title_font_size }}; line-height: normal;"
                                {% endif %}>
                                {{ sponsor.field_title[0].value }}
                            </p>
                            <span {% if not enable_new_style %}class="hidden"{% endif %}
                                {% if enable_new_style and sponsor_subtitle_font_size %}
                                    style="font-size: {{ sponsor_subtitle_font_size }}; line-height: normal;"
                                {% endif %}>
                                {{ sponsor.field_subtitle[0].value }}
                            </span>
                            {% if sponsor.field_sponsor_link[0].uri %}
                                </a>
                            {% endif %}
                        {% endif %}
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
    </div>
{% endif %}
