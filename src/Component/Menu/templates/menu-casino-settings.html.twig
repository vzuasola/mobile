<div id="casino-option-lightbox" class="modal casino-options">
    <div class="modal-content casino-option-content">
    <p class="casino title">{{ casino_option.title }}</p>
        <div class="modal-body casino-option-body">
            <div class="casino-option-body-select">
                <a 
                    href="#" data-preferred-casino="casino"
                    class="casino-classic casino-option select-option-muted"
                >
                    {% if app.lang == "ch" or app.lang == "sc" %}
                        <img src="{{ asset('images/dafabet_logo_chinese.png') }}" alt="{{ casino_option.logo_title }}">
                    {% else %}
                        <img src="{{ asset('images/dafabet_logo.png') }}" alt="{{ casino_option.logo_title }}">
                    {% endif %}
                    <p>{{ casino_option.casino_text }}</p>
                    <p class="in-maintenance">{{ casino_option.maintenance_text }}</p>
                </a>
                <a 
                    href="#" data-preferred-casino="casino_gold"
                    class="casino-gold casino-option select-option-muted"
                >
                    {% if app.lang == "ch" or app.lang == "sc" %}
                        <img src="{{ asset('images/dafabet_gold_logo_sc.png') }}" alt="{{ casino_option.logo_title }}">
                    {% else %}
                        <img src="{{ asset('images/dafabet_gold_logo.png') }}" alt="{{ casino_option.logo_title }}">
                    {% endif %}
                    <p>{{ casino_option.casino_gold_text }}</p>
                    <p class="in-maintenance">{{ casino_option.maintenance_text }}</p>
                </a>
            </div>
        </div>
    {% include '@app/web/images/svg/announcement/announcement-closed.svg' %}
    </div>
</div>
