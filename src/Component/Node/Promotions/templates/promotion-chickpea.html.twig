<div class="chickpea-overlay"></div>
<div class="chickpea-content">
{% set chickpea_data_set = "data-name='#{user_details.firstName} #{user_details.lastName}' data-viplevel='#{user_details.vip}'" %}
    <div id="chickpea-video"
        {{ is_login ? chickpea_data_set|raw : '' }} data-event="{{node.field_chickpea_event_name.0.value}}"
        data-autoplay="false"
        data-mute="false"
        data-script-url="{{ node.field_chickpea_script.0.uri}}"
    ></div>
    <div class="chickpea-controls"> 
        <div class="chickpea-lightbox-close">
            <svg viewBox="0 0 70.24 70.24" class="modal-close modal-close-button">
                    <rect class="modal-close" />
                    <path class="modal-close"
                        d="M39.53 35.12L53 21.17a3.18 3.18 0 0 0-.09-4.49 3.18 3.18 0 0 0-4.49.09l-13.3 13.78-13.26-13.78a3.18 3.18 0 0 0-4.49-.09 3.18 3.18 0 0 0-.08 4.49l13.43 13.95-13.43 14a3.17 3.17 0 1 0 4.57 4.4L35.12 39.7l13.26 13.77a3.18 3.18 0 0 0 4.49.09 3.18 3.18 0 0 0 .13-4.49z" />
            </svg>
        </div>
    </div>
</div>