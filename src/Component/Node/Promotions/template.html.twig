<div class="page-title">
        <h1 class="page-title-text">{{ title }}</h1>
    <a href="#" class="page-title-back-button">
        {% include '@app/web/images/svg/arrow.svg' %}
    </a>
</div>
    {% if is_login %}
        <img src="{{ field_post_banner_image }}" alt="" class="w-100">
    {% else %}
        <img src="{{ field_banner_image }}" alt="" class="w-100">
    {% endif %}

<div class="container page-promotion-inner">
    {% if is_login %}
        {{ field_post_body|raw }}
    {% else %}
        {{ body|raw }}
    {% endif %}
</div>