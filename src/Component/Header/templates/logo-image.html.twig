<h1 class="logo {{ app.lang }}">   
    <a 
    href="{{ logo_link }}"
    hreflang="{{ app.lang }}"
    rel="{{ logo_title }}"
    title="{{ logo_title }}">
		{% if app.lang == "ch" or app.lang == "sc" and app.product_resolver.getProduct != "mobile-casino-gold" %}
		    <img src="{{ asset('images/dafabet_logo_chinese.png') }}" alt="{{ logo_title }}" class="logo-img" id="header-logo-img">
		{% elseif app.product_resolver.getProduct == "mobile-casino-gold" %}
		    <img src="{{ asset('images/dafabet-gold-sc.png') }}" alt="{{ logo_title }}" class="logo-img" id="header-logo-img">
		{% else %}
		    <img src="{{ asset('images/dafabet_logo.png') }}" alt="{{ logo_title }}" class="logo-img" id="header-logo-img">
		{% endif %}
    </a>
</h1>
