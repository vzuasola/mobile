<div id="login-lightbox" class="modal login">
    <div class="modal-content login-content">
        <div class="modal-body">
            <img src="{{ asset('images/dafabet_logo.png') }}" alt="" class="login-logo mb-20">
            <form action="" class="login-form text-center">
                {# <p class="login-notification">Account details incorrect - please check</p> #}
                <div class="login-field mb-20">
                    <input type="text" class="login-field-username input-block-level" name="username" placeholder="Username">
                    {% include '@app/web/images/svg/user-login.svg' %}
                </div>
                <div class="login-field">
                    <input type="password" class="login-field-password input-block-level password-mask-enabled" name="password" placeholder="Password">
                    {% include '@app/web/images/svg/user-password.svg' %}
                    {% set passwordClass = true ? " password-mask-enabled" : "" %}
                    <span class="hidden password-mask-icon mask">
                        {% include '@app/web/images/svg/password-mask.svg' %}
                        {% include '@app/web/images/svg/password-unmask.svg' %}
                    </span>
                </div>
                {# <p class="login-error">Invalid password format, only 6-10 characters are allowed in this field.</p> #}
                <label class="login-remember-username block mt-10 mb-15 text-left">
                    <input type="checkbox"> Remember Username
                </label>
                <input type="submit" value="Login" class="btn btn-gray login-submit input-block-level mb-10">
                <p class="mb-30"><a href="#" class="login-help-link">Can't Login?</a></p>
                <p class="mb-10">Not yet a Dafabet member?</p>
                <a href="#" class="btn btn-yellow input-block-level">Join Now</a>
            </form>
        </div>
        {% include '@app/web/images/svg/closed.svg' %}
    </div>
</div>
