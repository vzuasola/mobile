{% set logoTag = is_front ? 'h1' : 'p' %}

<{{ logoTag }} class="logo {{ app.lang }}">
    {% set logoAltText = {
            en: 'Home',
            eu: 'Home',
            sc: '主页',
            ch: '主頁',
            th: 'หน้าแรก',
            vn: 'Trang chủ',
            id: 'Dafabet Indonesia : Bandar Bola, Agen Bola Terpercaya, Taruhan Bola, Judi Online',
            jp: ' ホーム',
            kr: '홈',
            in: 'Home',
            gr: 'Αρχική',
            pl: 'Home',
        }
    %}

    {% set logoUri = header.logo_uri is defined ? header.logo_uri : url('/') %}

    {% if app.lang == "ch" %}
        <span title="{{ logoAltText[app.lang] }}">
            {{ include('@site/Header/Templates/logo-image.html.twig') }}
        </span>
    {% elseif app.lang == "sc" %}
        <span title="{{ logoAltText[app.lang] }}">
            {{ include('@site/Header/Templates/logo-image.html.twig') }}
        </span>
    {% else %}
        <span title="{{ logoAltText[app.lang] }}">
            {{ include('@site/Header/Templates/logo-image.html.twig') }}
        </span>
    {% endif %}
</{{ logoTag }}>
