{% if not is_login %}
<div id="login-lightbox" class="modal login">
    <div class="modal-content login-content">
        <div class="modal-body">
            <div id="login-logo"></div>
            <form action="POST" class="login-form text-center" name="login-form" data-from-game-launch="false">
                {# <p class="login-notification">Account details incorrect - please check</p> #}
                <div class="login-field mb-20">
                    <input type="text" class="login-field-username input-block-level" name="username"
                        placeholder="{{ username_placeholder }}">
                    <svg class="login-field-icon" viewBox="0 210 24 25.087">
                        <use xlink:href="#user-login" id="user-login-svg"/>
                    </svg>
                </div>
                <div class="login-field">
                    <input type="password" class="login-field-password input-block-level password-mask-enabled"
                        name="password" placeholder="{{ password_placeholder }}">
                    <svg class="login-field-icon" viewBox="0 240 24 29.247" id="login-field-password">
                        <use xlink:href="#user-password" id="user-password-svg"/>
                    </svg>
                    {% set passwordClass = true ? " password-mask-enabled" : "" %}
                    <span class="hidden password-mask-icon mask">
                        <svg class="password-icon-mask" viewBox="0 150 24 17.445">
                            <use xlink:href="#password-mask" id="password-mask-svg" />
                        </svg>
                        <svg class="password-icon-unmask" viewBox="0 180 24 14.017">
                            <use xlink:href="#password-unmask" id="password-unmask-svg" />
                        </svg>
                    </span>
                </div>
                <p class="login-error"></p>
                <label class="login-remember-username">
                    <input type="checkbox" name="remember"> {{ mobile_remember }}
                </label>
                <input type="submit" value="{{ login_bottom_label }}"
                    class="btn btn-gray login-submit input-block-level mb-10">
                <p class="mb-30"><a href="{{ url(login_issue_link) }}"
                        class="login-help-link">{{ login_issue_text }}</a></p>
                <p class="mb-10">{{ lightbox_blurb }}</p>
                <a href="{{ url(join_now_link) }}" class="btn-join btn btn-yellow input-block-level"
                    data-join-url="{{ url(join_now_link) }}">
                    {{ join_now_text }}
                </a>
            </form>
        </div>
        {% include '@app/web/images/svg/closed.svg' ignore missing %}
    </div>
</div>
{% endif %}
<span class="hidden">
    {% include '@app/web/images/svg/login/dafabet-login.svg' ignore missing %}
</span>
